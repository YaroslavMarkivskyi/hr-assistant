{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "bb4df61d-0802-49f8-a8aa-3dc5e72cf696",
    "packageName": "com.hrbot.structura",
    "developer": {
        "name": "HR Onboarding Assistant",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/privacy",
        "termsOfUseUrl": "https://www.example.com/termofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "HR Onboarding Assistant",
        "full": "HR Onboarding Assistant Bot"
    },
    "description": {
        "short": "HR assistant bot for onboarding",
        "full": "Microsoft Teams bot for HR operations including employee onboarding."
    },
    "accentColor": "#0078D4",
    "bots": [
        {
            "botId": "bb4df61d-0802-49f8-a8aa-3dc5e72cf696",
            "scopes": [
                "personal",
                "team",
                "groupChat"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": [
                {
                    "scopes": [
                        "personal"
                    ],
                    "commands": [
                        {
                            "title": "Start",
                            "description": "Start the bot"
                        }
                    ]
                }
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "*.ngrok-free.app",
        "*.ngrok.io"
    ]
}